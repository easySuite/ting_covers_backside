/**
 * Implements theme_ting_object_cover().
 *
 * Default theme function implementation.
 */
function ting_covers_backside_ting_object_cover($variables) {
  $close_button = drupal_render($variables['elements']['#close_button']);
  $no_image_style = isset($variables['elements']['#no_image_style'])
    ? $variables['elements']['#no_image_style'] : '';
  $classes = implode(' ', $variables['elements']['#classes']);
  $image = drupal_render($variables['elements']['#image']);
  $front_cover_large_link = drupal_render($variables['elements']['#front_cover_large_link']);
  $back_cover_large_link = drupal_render($variables['elements']['#back_cover_large_link']);
  $front_cover_large_image = drupal_render($variables['elements']['#front_cover_large_image']);
  $back_cover_large_pdf = drupal_render($variables['elements']['#back_cover_large_pdf']);
  $entity_id = $variables['object']->id;
//dump($variables);
  $markup = <<<EOT
<div id="work-cover-{$entity_id}" class="work-cover" {$no_image_style}>
  <div class="work-cover-image">
    <div class="{$classes}">
      $image
    </div>
  </div>
  <div class="work-cover-selector clearfix">
    {$front_cover_large_link}
    {$back_cover_large_link}
  </div>
</div>

<div id="reveal-cover-large-{$entity_id}" class="reveal-modal reveal-cover-large" data-reveal="">
  <div class="reveal-cover-large-image">{$front_cover_large_image}</div>
  $close_button
</div>

<div id="reveal-cover-back-{$entity_id}" class="reveal-modal reveal-cover-back" data-reveal="">
  <div class="reveal-cover-back-image">{$back_cover_large_pdf}</div>
  $close_button
</div>
EOT;

  $data = "";
  foreach ($variables['data'] as $name => $value) {
    $data .= 'data-' . $name . '="' . htmlentities($value) . '" ';
  }

  $markup = '<div class="' . implode(' ', $variables['classes']) . '" ' . trim($data) . '>' . $variables['image'] . '</div>';

  return $markup;
}
